{
  "compilerOptions": {
    "lib": ["ESNext"],
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "jsx": "react",
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types/**/*.d.ts"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
